<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="70dp">
    <LinearLayout
        android:id="@+id/linear_carousel"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:orientation="vertical"

        android:background="@drawable/carousel_shape">
    <android.support.design.widget.TabLayout
        android:id="@+id/carousel_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        app:tabGravity="fill"
        app:tabIndicatorColor="#0B421A"
        app:tabIndicatorHeight="1.6dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#0B421A"
        app:tabTextColor="#000000" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/carousel_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme" />

    <android.support.v4.view.ViewPager
        android:id="@+id/carousel_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"/>
    </LinearLayout>
