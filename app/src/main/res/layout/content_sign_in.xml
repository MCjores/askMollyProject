        <!--android:src="@drawable/ic_rectangle" />-->


    <Button
        android:id="@+id/sign_in_btn_sign_in"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_in_edit_telephone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/rectangle_btn"
        android:elevation="10dp"
        android:paddingStart="18dp"
        android:paddingTop="13dp"
        android:paddingEnd="18dp"
        android:paddingBottom="13dp"
        android:src="@drawable/rectangle_btn"
        android:text="Войти"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="normal"
        />

    <TextView
        android:id="@+id/sign_in_tv_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_in_btn_sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="или"
        android:textColor="@color/colorBlack"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/sign_in_linear_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_in_tv_or"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sign_in_iv_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:contentDescription="Регистрация через facebook"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/sign_in_iv_vk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:contentDescription="Регистрация через Вконтакте"
            android:src="@drawable/vk" />
    </LinearLayout>
    <!--гугл картн=инка стоит по еврейски т.к. она имеет лишнее свободное пространство -->
    <ImageView
        android:id="@+id/sign_in_iv_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_in_tv_or"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/sign_in_linear_social"
        android:contentDescription="Регистрация через Google"
        android:src="@drawable/google" />

</RelativeLayout>