<?xml version="1.0" encoding="utf-8"?>

<!--может криво встать на устройствах с большим экраном - нужно через ridview-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/head_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <CheckBox
            android:id="@+id/stop_gluten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"

            android:layout_marginEnd="20dp"

            android:background="@drawable/stop_eat_selector"
            android:button="@null"
            android:text="Глютен"
            android:textAlignment="center" />

        <CheckBox
            android:id="@+id/stop_strawberry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/stop_eat_selector"


            android:button="@null"
            android:text="Клубника"
            android:textAlignment="center" />

        <CheckBox
            android:id="@+id/stop_black_paper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stop_strawberry"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/stop_eat_selector"
            android:button="@null"
            android:text="Черный перец"
            android:textAlignment="center"

            />

        <CheckBox
            android:id="@+id/stop_apple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/stop_eat_selector"
            android:button="@null"
            android:text="Яблоки"
            android:textAlignment="center" />

        <CheckBox
            android:id="@+id/stop_nuts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/stop_eat_selector"
            android:button="@null"
            android:text="Орехи"
            android:textAlignment="center" />

        <CheckBox
            android:id="@+id/stop_fish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/stop_eat_selector"
            android:button="@null"
            android:text="Рыба"
            android:textAlignment="center" />

        <CheckBox
            android:id="@+id/mollusk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/stop_fish"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/stop_eat_selector"
            android:button="@null"
            android:text="Моллюски"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"




        >
        <CheckBox
            android:id="@+id/stop_peanut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_marginEnd="20dp"
            android:background="@drawable/stop_eat_selector"
            android:button="@null"
            android:text="Арахис"
            android:textAlignment="center"


            android:layout_marginTop="20dp"

            />

        <CheckBox
            android:id="@+id/stop_sugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stop_peanut"

            android:background="@drawable/stop_eat_selector"
            android:button="@null"
            android:text="Сахар"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/stop_strawberry"
            android:layout_marginTop="20dp"

            android:layout_marginEnd="20dp"
            />

        <CheckBox
            android:id="@+id/stop_lactose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/stop_eat_selector"
            android:button="@null"
            android:text="Лактоза"
            android:textAlignment="center" android:layout_marginTop="20dp"

            android:layout_marginEnd="20dp"
            />

        <CheckBox
            android:id="@+id/stop_citrus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/stop_eat_selector"
            android:button="@null"
            android:text="Цитрус"
            android:textAlignment="center" android:layout_marginTop="20dp"

            android:layout_marginEnd="20dp"
            />

        <CheckBox
            android:id="@+id/stop_eggs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/stop_eat_selector"
            android:button="@null"
            android:text="Яйца"
            android:textAlignment="center" android:layout_marginTop="20dp"


            />

        <CheckBox
            android:id="@+id/stop_soy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stop_eggs"
            android:layout_toEndOf="@+id/stop_fish"
            android:background="@drawable/stop_eat_selector"
            android:button="@null"
            android:text="Соя"
            android:textAlignment="center" android:layout_marginTop="20dp"

            android:layout_marginEnd="20dp"
            />

        <CheckBox
            android:id="@+id/stop_grape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stop_soy"
            android:layout_toEndOf="@id/mollusk"
            android:background="@drawable/stop_eat_selector"
            android:button="@null"
            android:text="Моллюски"
            android:textAlignment="center"
            android:layout_marginTop="20dp"

            android:layout_marginEnd="20dp"
            />


    </LinearLayout>
</LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_linear"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/green_btn"
        android:text="Сохранить" />
</RelativeLayout>