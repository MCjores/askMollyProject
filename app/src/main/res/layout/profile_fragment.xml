<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/select_in_linear_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_petal_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_top_left_petal" />

        <ImageView
            android:id="@+id/profile_petal_top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_top_right_petal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_linear_bot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_petal_bot_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/vector_bot_left_petal" />

        <ImageView
            android:id="@+id/profile_petal_bot_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_bot_right_petal" />
    </LinearLayout>

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:src="@drawable/cat_big"
        android:layout_centerHorizontal="true"
        android:paddingTop="95dp"
        />

    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_photo"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:text="Имя"
        android:textSize="10sp"

        />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/tv_profile_name"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:text="Ваше имя"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/profile_name"
        android:layout_marginTop="9dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/colorBlack"/>

    <TextView
        android:id="@+id/tv_profile_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:text="Телефон"
        android:textSize="10sp"
        />
    <TextView
        android:id="@+id/profile_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_profile_phone"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:text="Ваш телефон"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/profile_phone"
        android:layout_marginTop="9dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/colorBlack"/>


    <Button
        android:id="@+id/btn_profile_exit"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@+id/profile_linear_bot"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        style="@style/AskMolly.ButtonProfileExit"
        android:text="Выйти"
        android:textSize="18sp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"

        />

</RelativeLayout>