<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/select_in_linear_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/select_in_petal_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_top_left_petal" />

        <ImageView
            android:id="@+id/select_in_petal_top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_top_right_petal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_in_linear_bot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/select_in_petal_bot_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/vector_bot_left_petal" />

        <ImageView
            android:id="@+id/select_in_petal_bot_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_bot_right_petal" />
    </LinearLayout>


    <ImageView
        android:id="@+id/select_in_logo"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_below="@+id/select_in_linear_top"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_ask_molly" />


    <TextView
        android:id="@+id/select_in_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/select_in_logo"
        android:layout_centerHorizontal="true"
        android:text="Гид по твоему питанию"
        android:textColor="@color/colorAskMolly"
        android:textSize="22sp"/>


    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_in_tv_title"
        android:layout_marginStart="17dp"
        android:layout_marginTop="67dp"

        android:layout_marginEnd="21dp"

        android:layout_toStartOf="@+id/select_in_btn_select_in"
        android:paddingStart="18dp"
        android:paddingTop="13dp"
        android:paddingEnd="18dp"
        android:paddingBottom="13dp"
        android:background="@drawable/ic_rectangle_text"
        android:textColor="@color/colorAskMolly"
        android:textSize="16sp"
        android:text="Войти" />

        <Button
            android:id="@+id/select_in_btn_select_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="66dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rectangle_btn"
            android:paddingStart="18dp"
            android:paddingTop="13dp"
            android:paddingEnd="18dp"
            android:paddingBottom="13dp"
            android:layout_below="@+id/select_in_tv_title"

            android:text="Регистрация"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="normal" />



    <TextView
        android:id="@+id/select_in_tv_missing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_in_btn_select_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="@string/missing"
        android:textColor="@color/colorAskMolly"
        android:textSize="15sp" />

</RelativeLayout>