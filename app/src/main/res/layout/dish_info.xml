<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:layout_marginTop="60dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/dish_info_dish_photo"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_marginTop="5dp"
        app:riv_corner_radius="10dp"
        android:src="@drawable/png_salad"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/dish_info_dish_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Яичница с авокадо"
        android:textSize="20sp"
        android:textColor="@color/colorAskMolly"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <android.support.design.widget.TabLayout
        android:id="@+id/dish_info_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        app:tabGravity="fill"
        app:tabIndicatorColor="#0B421A"
        app:tabIndicatorHeight="1.6dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#0B421A"
        app:tabTextColor="#000000" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/dish_info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme" />

    <android.support.v4.view.ViewPager
        android:id="@+id/dish_info_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/dish_info_linear"
        android:background="@color/colorWhite"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/dish_info_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        >
        <TextView
            android:id="@+id/dish_info_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цена"
            android:textSize="20sp"
            android:textColor="@color/colorAskMolly"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150 p"
            android:textColor="@color/colorAskMolly"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="70dp"
            />
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginStart="20dp"
            android:text="Добавть"

            style="@style/AskMolly.ButtonMain"
            />
    </LinearLayout>
    </RelativeLayout>



</LinearLayout>